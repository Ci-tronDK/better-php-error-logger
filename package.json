{
    "name": "better-php-error-logger",
    "displayName": "Better PHP Error Logger",
    "description": "A PHP error logger with customisation options",
    "icon": "images/better-php-error-logger.png",
    "version": "0.0.70",
    "publisher": "martinvz",
    "engines": {
        "vscode": "^1.66.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.errorLog"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.errorLog",
                "title": "Error log"
            }
        ],
        "keybindings": [
            {
                "command": "extension.errorLog",
                "key": "ctrl+alt+d",
                "mac": "ctrl+alt+d"
            }
        ],
        "configuration": {
            "title": "Better PHP Error Logger",
            "properties": {
                "betterPhpErrorLogger.errorLogs": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "This will be error logged"
                    },
                    "default": [
                        "'${selectedVar}: ' . print_r(${selectedVar}, true)",
                        "'in ' . __FILE__ . ' on line ' . __LINE__"
                    ],
                    "description": "Write an array, each value will be error logged. Use ${selectedVar} for the selected variable"
                },
                "betterPhpErrorLogger.printCallStack": {
                    "type": "boolean",
                    "default": false,
                    "description": "Set this to true to also print call stack"
                },
                "betterPhpErrorLogger.varDumpVariable": {
                    "type": "boolean",
                    "default": false,
                    "description": "Set this to true to var_dump the selected variable"
                },
                "betterPhpErrorLogger.useEchoInstead": {
                    "type": "boolean",
                    "default": false,
                    "description": "Set this to true to use echo instead of error_log"
                },
                "betterPhpErrorLogger.defaultVariable": {
                    "type": "object",
                    "title": "Default variable",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "Set the name of the variable, when no variable is selected",
                            "default": "$here"
                        },
                        "value": {
                            "type": "string",
                            "description": "Set the value of the variable, when no variable is selected",
                            "default": "__CLASS__ . '::' . __FUNCTION__"
                        }
                    },
                    "default": {
                        "name": "$here",
                        "value": "__CLASS__ . '::' . __FUNCTION__"
                    },
                    "description": "Set name and value of the default variable, when no variable is selected",
                    "additionalProperties": false
                },
                "betterPhpErrorLogger.varDumpSpecialChars": {
                    "type": "object",
                    "title": "Special characters to use for variable when var dumping",
                    "properties": {
                        "Space before var_dump": {
                            "type": "string",
                            "description": "Set the special character to use before var_dump in the variable",
                            "default": " "
                        },
                        "->": {
                            "type": "string",
                            "description": "Set the special character to use for ->",
                            "default": "➜"
                        },
                        "(": {
                            "type": "string",
                            "description": "Set the special character to use for (",
                            "default": "⟮"
                        },
                        ")": {
                            "type": "string",
                            "description": "Set the special character to use for )",
                            "default": "⟯"
                        },
                        "[": {
                            "type": "string",
                            "description": "Set the special character to use for [",
                            "default": "⦋"
                        },
                        "]": {
                            "type": "string",
                            "description": "Set the special character to use for ]",
                            "default": "⦌"
                        },
                        "'": {
                            "type": "string",
                            "description": "Set the special character to use for '",
                            "default": ""
                        },
                        "\"": {
                            "type": "string",
                            "description": "Set the special character to use for \"",
                            "default": ""
                        }
                    },
                    "default": {
                        "Space before var_dump": " ",
                        "->": "➜",
                        "(": "⟮",
                        ")": "⟯",
                        "[": "⦋",
                        "]": "⦌",
                        "'": "",
                        "\"": ""
                    },
                    "description": "Set the special characters to use for variable when var dumping if default is not supported",
                    "additionalProperties": false
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.66.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "typescript": "^4.6.4",
        "@vscode/test-electron": "^2.1.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MartinZielke/better-php-error-logger"
    }
}