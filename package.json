{
    "name": "better-php-error-logger",
    "displayName": "Better PHP Error Logger",
    "description": "A PHP error logger with customization options",
    "icon": "images/better-php-error-logger.png",
    "version": "0.1.20",
    "publisher": "martinvz",
    "engines": {
        "vscode": "^1.66.0"
    },
    "categories": [
        "Debuggers",
        "Other"
    ],
    "keywords": [
        "php",
        "error",
        "logger",
        "log",
        "debug",
        "debugger",
        "debugging",
        "customisation",
        "customization",
        "error logger",
        "errorlog",
        "error_log",
        "output buffer",
        "ob_get_contents",
        "better",
        "var_dump",
        "var dump",
        "call stack",
        "stack trace",
        "echo error",
        "log error",
        "log error message",
        "line number",
        "file name"
    ],
    "activationEvents": [],
    "main": "./out/main.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.betterPhpErrorLogger",
                "title": "Error log"
            },
            {
                "command": "extension.betterPhpErrorLogger.printWithCallStack",
                "title": "Call stack"
            },
            {
                "command": "extension.betterPhpErrorLogger.varDumpVariable",
                "title": "Var dump variable"
            },
            {
                "command": "extension.betterPhpErrorLogger.useEchoInstead",
                "title": "Use echo instead"
            },
            {
                "command": "extension.betterPhpErrorLogger.deleteErrorLogs",
                "title": "Delete error logs"
            },
            {
                "command": "extension.betterPhpErrorLogger.printCurrentOutputBuffer",
                "title": "Get current output buffer"
            },
            {
                "command": "extension.betterPhpErrorLogger.printCurrentOutputBufferWithCallStack",
                "title": "Get current output buffer with call stack"
            },
            {
                "command": "extension.betterPhpErrorLogger.printCurrentOutputBufferVarDump",
                "title": "Get current output buffer, var dump"
            },
            {
                "command": "extension.betterPhpErrorLogger.printCurrentOutputBufferUseEcho",
                "title": "Get current output buffer, use echo"
            }
        ],
        "keybindings": [
            {
                "command": "extension.betterPhpErrorLogger",
                "key": "ctrl+alt+d",
                "mac": "ctrl+alt+d",
                "args": ""
            },
            {
                "command": "extension.betterPhpErrorLogger.printWithCallStack",
                "key": "ctrl+alt+c",
                "mac": "ctrl+alt+c",
                "args": "printWithCallStack"
            },
            {
                "command": "extension.betterPhpErrorLogger.varDumpVariable",
                "key": "ctrl+alt+v",
                "mac": "ctrl+alt+v",
                "args": "varDumpVariable"
            },
            {
                "command": "extension.betterPhpErrorLogger.useEchoInstead",
                "key": "ctrl+alt+e",
                "mac": "ctrl+alt+e",
                "args": "useEchoInstead"
            },
            {
                "command": "extension.betterPhpErrorLogger.deleteErrorLogs",
                "key": "ctrl+alt+x",
                "mac": "ctrl+alt+x"
            },
            {
                "command": "extension.betterPhpErrorLogger.printCurrentOutputBuffer",
                "key": "ctrl+alt+o d",
                "mac": "ctrl+alt+o d",
                "args": "printCurrentOutputBuffer"
            },
            {
                "command": "extension.betterPhpErrorLogger.printCurrentOutputBufferWithCallStack",
                "key": "ctrl+alt+o c",
                "mac": "ctrl+alt+o c",
                "args": "printCurrentOutputBufferWithCallStack"
            },
            {
                "command": "extension.betterPhpErrorLogger.printCurrentOutputBufferVarDump",
                "key": "ctrl+alt+o v",
                "mac": "ctrl+alt+o v",
                "args": "printCurrentOutputBufferVarDump"
            },
            {
                "command": "extension.betterPhpErrorLogger.printCurrentOutputBufferUseEcho",
                "key": "ctrl+alt+o e",
                "mac": "ctrl+alt+o e",
                "args": "printCurrentOutputBufferUseEcho"
            }
        ],
        "configuration": {
            "title": "Better PHP Error Logger",
            "properties": {
                "betterPhpErrorLogger.errorLogs": {
                    "type": "array",
                    "title": "Error logs",
                    "items": {
                        "type": "string",
                        "description": "This will be error logged"
                    },
                    "default": [
                        "'${selectedVarString}: ' . print_r(${selectedVar}, true)",
                        "'in ' . __FILE__ . ' on line ' . __LINE__"
                    ],
                    "description": "Write an array, with objects with the property errorLog, where each objects errorlog value will be error logged. Use ${selectedVar} for the selected variable. And ${selectedVarString} for the variable string (Read readme)"
                },
                "betterPhpErrorLogger.printWithCallStack": {
                    "type": "object",
                    "title": "Print with call stack",
                    "properties": {
                        "printWithCallStack": {
                            "type": "boolean",
                            "default": false,
                            "description": "Set this to true to also print call stack"
                        },
                        "printCallStackAsArray": {
                            "type": "boolean",
                            "default": false,
                            "description": "Set this to true to print call stack as array"
                        }
                    },
                    "default": {
                        "printWithCallStack": false,
                        "printCallStackAsArray": false
                    },
                    "description": "Set this to true to also print call stack and set printCallStackAsArray to true to print call stack as array",
                    "additionalProperties": false
                },
                "betterPhpErrorLogger.varDumpVariable": {
                    "type": "boolean",
                    "title": "Var dump variable",
                    "description": "Set this to true to var_dump the selected variable",
                    "default": false
                },
                "betterPhpErrorLogger.useEchoInstead": {
                    "type": "boolean",
                    "title": "Use echo instead",
                    "default": false,
                    "description": "Set this to true to use echo instead of error_log"
                },
                "betterPhpErrorLogger.defaultVariable": {
                    "type": "object",
                    "title": "Default variable",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "Set the name of the selectedVarString, when no variable is selected",
                            "default": "here"
                        },
                        "value": {
                            "type": "string",
                            "description": "Set the value of the variable, when no variable is selected",
                            "default": "__CLASS__ . '::' . __FUNCTION__"
                        }
                    },
                    "default": {
                        "name": "here",
                        "value": "__CLASS__ . '::' . __FUNCTION__"
                    },
                    "description": "Set name and value of the default selectedVarString, when no variable is selected",
                    "additionalProperties": false
                },
                "betterPhpErrorLogger.usePHPParserForPositioning": {
                    "type": "boolean",
                    "title": "Use PHP Parser for positioning",
                    "default": true,
                    "description": "Set this to false to not use the vscode-php-parser for positioning. PHP Parser requires valid code. When false, error_logs will always be placed on the next line."
                },
                "betterPhpErrorLogger.laravelLog": {
                    "type": "object",
                    "title": "Laravel log",
                    "properties": {
                        "useLaravelLog": {
                            "type": "boolean",
                            "default": false,
                            "description": "Set this to true to use the laravel log function instead of error_log"
                        },
                        "laravelLogLevel": {
                            "type": "string",
                            "default": "debug",
                            "enum": [
                                "debug",
                                "info",
                                "notice",
                                "warning",
                                "error",
                                "critical",
                                "alert",
                                "emergency"
                            ],
                            "description": "Set the laravel log level to use"
                        }
                    },
                    "default": {
                        "useLaravelLog": false,
                        "laravelLogLevel": "debug"
                    },
                    "description": "Set useLaravelLog to true to use the laravel log function instead of error_log and set laravelLogLevel to the log level you want to use",
                    "additionalProperties": false
                },
                "betterPhpErrorLogger.logOnlyFirstSelection": {
                    "type": "boolean",
                    "title": "Log only first selection",
                    "default": false,
                    "description": "Set this to true to only log the first selection"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./built/test/runTest.js",
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "@types/vscode": "^1.66.0",
        "@vscode/test-electron": "^2.1.3",
        "esbuild": "^0.15.15",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "typescript": "^4.7.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MartinZielke/better-php-error-logger"
    },
    "sponsor": {
        "url": "https://github.com/sponsors/MartinZielke"
    },
    "bugs": {
        "url": "https://github.com/MartinZielke/better-php-error-logger/issues"
    },
    "author": {
        "name": "Martin Vest Zielke"
    },
    "license": "MIT",
    "dependencies": {
        "php-parser": "^3.1.1"
    }
}